<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    card_view:cardCornerRadius="4dp"
    android:backgroundTint="@color/colorItemBackground">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/order_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2 Sea Food Cocktail"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="0.2"
        android:textSize="18sp"
        android:layout_margin="10dp" />
    <TextView
        android:id="@+id/order_item_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PREPARING"
        android:textAlignment="center"
        android:textColor="@color/bright_foreground_inverse_material_light"
        android:layout_weight="0.8"
        android:background="@color/button_green"
        android:singleLine="false"
        android:paddingTop="5dp"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>
    </android.support.v7.widget.CardView>