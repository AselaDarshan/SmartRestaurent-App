<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/windowBackground"
    tools:context="com.enet.smartrestaurent.LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/newOrderButton"
        android:layout_alignEnd="@+id/activeOrderButton"
        android:src="@drawable/bg"
        android:layout_weight="1" />
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Select Your Username"-->
        <!--android:textSize="25sp"-->
        <!--android:textColor="@color/colorPrimaryDark"-->
        <!--/>-->
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:textSize="35sp"
        android:gravity="left"
        android:prompt="@string/prompt"
        android:textColor="@color/colorPrimaryDark"
        android:popupBackground="@color/colorPrimary"
        android:layout_margin="20dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="58sp"
        android:text="Enter"
        android:id="@+id/activeOrderButton"
        android:layout_below="@+id/loginButton"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent"
        android:layout_alignParentStart="true"
        style="@style/ButtonStyle"
        android:onClick="loginButtonClicked"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp" />
</LinearLayout>
