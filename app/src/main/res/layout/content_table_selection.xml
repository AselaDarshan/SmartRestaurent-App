<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.enet.smartrestaurent.TableSelectionActivity"
    tools:showIn="@layout/activity_table_selection"
    android:background="@color/windowBackground"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Table"
        android:id="@+id/textView"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        android:textColor="@color/button_red"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">



        <Button


            android:text="1"
            android:id="@+id/table1"
            style="@style/TableButtonStyle"

            android:background="@drawable/button" />

        <Button


            android:text="2"
            android:background="@drawable/button"
            android:id="@+id/table2"
            style="@style/TableButtonStyle"
            />

        <Button


            android:text="3"
            android:background="@drawable/button"
            android:id="@+id/table3"
            style="@style/TableButtonStyle"
             />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            style="@style/TableButtonStyle"


            android:text="4"
            android:background="@drawable/button"
            android:id="@+id/table4"
            />

        <Button
            style="@style/TableButtonStyle"

            android:text="5"
            android:background="@drawable/button"
            android:id="@+id/table5"
             />

        <Button
            style="@style/TableButtonStyle"

            android:text="6"
            android:background="@drawable/button"
            android:id="@+id/table6"
             />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button

            style="@style/TableButtonStyle"

            android:text="7"
            android:background="@drawable/button"
            android:id="@+id/table7"
             />
        <Button
            style="@style/TableButtonStyle"


            android:text="8"
            android:background="@drawable/button"
            android:id="@+id/table8"
     />
        <Button
            style="@style/TableButtonStyle"

            android:text="9"
            android:background="@drawable/button"
            android:id="@+id/table9"
             />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            style="@style/TableButtonStyle"

            android:text="10"
            android:background="@drawable/button"
            android:id="@+id/table10"
            />
        <Button
            style="@style/TableButtonStyle"

            android:text="11"
            android:background="@drawable/button"
            android:id="@+id/table11"
         />
        <Button
            style="@style/TableButtonStyle"

            android:text="12"
            android:background="@drawable/button"
            android:id="@+id/table12"
         />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
