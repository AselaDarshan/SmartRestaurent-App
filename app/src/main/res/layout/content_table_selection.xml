<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.enet.smartrestaurent.TableSelectionActivity"
    tools:showIn="@layout/activity_table_selection"
    android:background="@color/windowBackground"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Table"
        android:id="@+id/textView"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        android:textColor="@color/button_red"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:columnCount="3"
        android:rowCount="4"
        android:id="@+id/gridLayout">

        <Button

            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/table1"
            style="@style/TableButtonStyle"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/button" />

        <Button

            android:layout_height="wrap_content"
            android:text="2"
            android:background="@drawable/button"
            android:id="@+id/table2"
            style="@style/TableButtonStyle"
            android:layout_row="0"
            android:layout_column="1" />

        <Button

            android:layout_height="wrap_content"
            android:text="3"
            android:background="@drawable/button"
            android:id="@+id/table3"
            style="@style/TableButtonStyle"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="4"
            android:background="@drawable/button"
            android:id="@+id/table4"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="5"
            android:background="@drawable/button"
            android:id="@+id/table5"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="6"
            android:background="@drawable/button"
            android:id="@+id/table6"
            android:layout_row="1"
            android:layout_column="2" />
        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="7"
            android:background="@drawable/button"
            android:id="@+id/table7"
            android:layout_row="2"
            android:layout_column="0" />
        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="8"
            android:background="@drawable/button"
            android:id="@+id/table8"
            android:layout_row="2"
            android:layout_column="1" />
        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="9"
            android:background="@drawable/button"
            android:id="@+id/table9"
            android:layout_row="2"
            android:layout_column="2" />
        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="10"
            android:background="@drawable/button"
            android:id="@+id/table10"
            android:layout_row="3"
            android:layout_column="0" />
        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="11"
            android:background="@drawable/button"
            android:id="@+id/table11"
            android:layout_row="3"
            android:layout_column="1" />
        <Button
            style="@style/TableButtonStyle"

            android:layout_height="wrap_content"
            android:text="12"
            android:background="@drawable/button"
            android:id="@+id/table12"
            android:layout_row="3"
            android:layout_column="2" />

    </GridLayout>


</LinearLayout>
